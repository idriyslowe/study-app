<%= render partial: "navbar" %>

<div class="show">
  <h3>Environment: <%= @environment.name %></h3>
  <h1><%= current_user.email %></h1>
  <ul>
    <% @environment.note_pages.each do |page| %>
      <li><a href="/note_pages/<%= page.id %>"><%= page.title %></a></li>
      <% page.bookmarks.each do |bookmark| %>
        <%= bookmark.name %>
      <% end %>
    <% end %>
  </ul>

  <h2>Create New Note Page</h2>
  <%= form_tag '/note_pages', method: :post do %>
    <div>
      <%= label_tag :title %>
      <%= text_field_tag :title %>
    </div>
    <div>
      <%= hidden_field_tag :environment_id, @environment.id %>
    </div>
    <%= submit_tag 'Submit' %>
  <% end %>

  <div>
    <%= link_to 'Edit', "/environments/#{@environment.id}/edit" %>
  </div>
  <div>
    <%= link_to 'Archive', "/environments/#{@environment.id}", method: :delete %>
  </div>
</div>