  <%= render partial: "navbar" %>

  <!-- WRAPPER -->
  <div class="wrapper">

    <!-- HERO -->
    <section id="hero" class="module-hero bg-dark-30 js-fullheight" data-background="http://cdn.shopify.com/s/files/1/0072/7502/products/8888a_08727881-0ac8-442c-b843-b26b7be897e9.jpg?v=1438190485">

      <!-- HERO TEXT -->
      <div class="hero-caption">
        <div class="hero-text">
          <h6 class="m-b-30"><%= current_user.email %></h6>
          <h1 class="m-b-30">ENVIRONMENTS</h1>
          <h6 class="m-b-60"></h6>
          <a href="/environments/new" class="btn btn-dark anim-scroll">Create New Environment</a>
            <%= form_tag '/environments', method: :post do %>

              <div class="form-group">
                <%= label_tag :name %>
                <%= text_field_tag :name %>
              </div>
              
              <%= submit_tag 'Submit' %>
            <% end %>
        </div>
      </div>
      <!-- /HERO TEXT -->

    </section>
    <!-- /HERO -->

    <!-- PORTFOLIO -->
    <section id="portfolio" class="module-sm">
      <div class="container-fluid">

        <div class="works-grid-wrapper">

          <div id="works-grid" class="works-grid works-grid-gutter">

            <% @environments.each do |environment| %>
              <!-- PORTFOLIO ITEM/COLUMN -->
              <article class="work-item">
                <div class="work-wrapper">
                  <div class="work-thumbnail">
                    <%= image_tag "http://magickcanoe.com/CC-boyscout-forest-large.jpg" %>
                  </div>
                  <div class="work-caption">
                    <h3 class="work-title font-alt"><%= link_to environment.name, "/environments/#{environment.id}" %></h3>
                  </div>
                </div>
              </article>
              <!-- /PORTFOLIO ITEM -->
            <% end %>

              <!-- PORTFOLIO ITEM/COLUMN -->
              <article class="work-item">
                <div class="work-wrapper">
                  <div class="work-thumbnail">
                    <%= image_tag "http://magickcanoe.com/CC-boyscout-forest-large.jpg" %>
                  </div>
                  <div class="work-caption">
                    <h3 class="work-title font-alt"><%= link_to "Archive", "/environments" %></h3>
                  </div>
                </div>
              </article>
              <!-- /PORTFOLIO ITEM -->

          </div>

        </div><!-- works-grid-wrapper -->
      </div>
    </section>
  </div>
