<%= render partial: "navbar" %>

<!-- PORTFOLIO SINGLE -->
<section class="module-accordion">
  <div class="container-fluid container-custom">
      <% @note_pages.notes.each do |note| %>
      <div class="row">
        <!-- COLUMN 8 DIV -->
        <div class="col-md-8">
        <!-- ACCORDIONS -->
          <div id="accordion" class="panel-group">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title"><a data-toggle="collapse" data-parent="#accordion" href="#support<%=note.id%>">
                <%= note.id %>                 
                </a></h4>
              </div>
              <div id="support<%=note.id%>" class="panel-collapse collapse in">
                <div class="panel-body">
                  <h4>
                  <%= note.text %>
                  </h4>
                </div>
              </div>
            </div>
          </div>
        <!-- /ACCORDIONS --> 
        </div>
        <!-- /COLUMN 8 DIV -->
        <div class="col-md-2">
          <p>This is where the bookmark buttons go</p>
          <%= link_to 'Delete Note', "/notes/#{note.id}", method: :delete %> 
        </div>
      </div>
      <% end %>       
  </div>
</section>

      <!-- NEW FORM -->
<div class="row">
<div class="col-sm-4"></div>
<div class="col-sm-4">
<%= form_tag '/notes', method: :post do %> 
  <form id="contact-form" role="form" novalidate>
    <div class="form-group">
      <label class="sr-only" for="title">Name</label>
      <input type="text" id="name" class="form-control" name="title" placeholder="New NotePage Name">
      <p class="help-block text-danger"></p>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-block btn-round btn-dark">Create</button>
    </div>
    <div>
      <%= hidden_field_tag :environment_id, @environment.id %>
    </div>
  </form>
<% end %>
<div class="col-sm-4"></div>
<!-- FORM END -->

<!-- TAGS -->
<div class="tags font-serif">
  <%= link_to 'Back to Environment', "/environments/#{@note_pages.environment_id}" %>
</div>
  <!-- /TAGS -->


