<%= render partial: "navbar" %>

<!-- PORTFOLIO SINGLE -->
<div class="container-fluid container-custom">
  <div class="col-sm-10 col-sm-offset-2">

    <!-- PORTFOLIO CONTENT -->

      <h3>Note Page: <%= @note_pages.title %></h3>

      <%= form_tag "/note_pages/#{@note_pages.id}", method: :patch do %>

      <%= text_area_tag :text, @note_pages.text %>

      <%= hidden_field_tag :title, @note_pages.title %>
      <%= hidden_field_tag :id, @note_pages.id %>
      <button type="submit" class="btn btn-block btn-round btn-dark">Submit</button>
      <% end %>

      <div>
        <%= link_to 'Edit', "/note_pages/#{@note_pages.id}/edit" %>
      </div>
      <div>
        <%= link_to 'Delete Page', "/note_pages/#{@note_pages.id}", method: :delete %>
      </div>

    <!-- /PORTFOLIO CONTENT -->

    <!-- TAGS -->
    <div class="tags font-serif">
      <%= link_to 'Back to Environment', "/environments/#{@note_pages.environment_id}" %>
    </div>
      <!-- /TAGS -->
  </div>
</div>
<!-- /PORTFOLIO SINGLE -->

<section class="module-accordion">
  <div class="container-fluid container-custom">
      <% @note_pages.bookmarks.each do |bookmark| %>
        <!-- ACCORDIONS -->
        <div id="accordion" class="panel-group">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title"><a data-toggle="collapse" data-parent="#accordion" href="#support<%=bookmark.id%>"><%= bookmark.name %></a></h4>
            </div>
            <div id="support<%= bookmark.id %>" class="panel-collapse collapse in">
              <div class="panel-body">
                <%= link_to "OPEN... ", "/bookmarks/#{bookmark.id}" %><%= bookmark.path %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
        <!-- /ACCORDIONS -->
  </div>
</section>
