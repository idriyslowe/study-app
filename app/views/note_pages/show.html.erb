<h1>NotePage</h1>
<h1><%= @note_pages.title %></h1>

<%= form_tag "/note_pages/#{@note_pages.id}", method: :patch do %>
<div>
  <%= text_area_tag :text, @note_pages.text, size: "24 x 24" %>
</div>
<%= hidden_field_tag :id, @note_pages.id %>
<%= submit_tag "Submit" %>
<% end %>

<div>
  <%= link_to 'Edit', "/note_pages/#{@note_pages.id}/edit" %>
</div>
<div>
  <%= link_to 'Delete Page', "/environments/#{@note_pages.id}", method: :delete %>
</div>
<div>
  <%= link_to 'Back to Environment', "/environments/#{@environment}" %>
</div>