<%= render partial: "navbar" %>

<!-- PORTFOLIO SINGLE -->
<div class="container-fluid container-custom">
  <div class="col-sm-10 col-sm-offset-2">

    <!-- PORTFOLIO CONTENT -->

      <h3>Note Page: <%= @note_pages.title %></h3>

      <%= form_tag "/note_pages/#{@note_pages.id}", method: :patch do %>

      <%= text_area_tag :text, @note_pages.text %>

      <%= hidden_field_tag :title, @note_pages.title %>
      <%= hidden_field_tag :id, @note_pages.id %>
      <button type="submit" class="btn btn-block btn-round btn-dark">Submit</button>
      <% end %>

      <div>
        <%= link_to 'Edit', "/note_pages/#{@note_pages.id}/edit" %>
      </div>
      <div>
        <%= link_to 'Delete Page', "/note_pages/#{@note_pages.id}", method: :delete %>
      </div>

    <!-- /PORTFOLIO CONTENT -->

    <!-- TAGS -->
    <div class="tags font-serif">
      <%= link_to 'Back to Environment', "/environments/#{@note_pages.environment_id}" %>
    </div>
      <!-- /TAGS -->
  </div>
</div>
<!-- /PORTFOLIO SINGLE -->

<div class="row">
<div class="col-sm-4"></div>
<div class="col-sm-4">
<%= form_tag '/bookmarks', method: :post do %> 
  <form id="contact-form" role="form" novalidate>
    <div class="form-group">
      <label class="sr-only" for="name">Name</label>
      <input type="text" id="name" class="form-control" name="name" placeholder="New Environment Name">
      <p class="help-block text-danger"></p>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-block btn-round btn-dark">Create</button>
    </div>
  </form>
<% end %>
<div class="col-sm-4"></div>
