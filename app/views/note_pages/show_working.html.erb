

<div ng-app='app' ng-controller='notes' ng-init="setup()">
  <div class="logo col-sm-2">
    <a href="/environments"><img src="../../studere-icon.gif" alt=""></a>
  </div>
  <div class="col-sm-8 notepage-intro">
      <p class="notepage-title">NOTEPAGE: notepage.title </p>
      <p class="notepage-summary">notepage.summary</p>
  </div>
  <div class="col-sm-2 notepage-intro">Hamburger on the right</div>

  <div class="wrapper">
  <!-- ANGULAR AND BOOTSTRAP SETUP -->
    <div>
        <section>
          <div class="container-fluid container-custom">
            <div class="col-sm-12 tags font-serif"> 
              <!-- END SETUP -->
              <!-- BOOKMARKS -->
              <!-- <div class="col-md-12" ondrop="drop(event)" ondragover="allowDrop(event)"> -->
              <p class="notes-section">NOTES</p>
              <div class="col-md-10">
              <!-- BOOKMARKS -->
                  <div class="bookmarks">
                      <a href="https://www.buzzfeed.com/" target="_blank" class="bookmark">Friday, 04 Mar 2016 3:27 PM</a>
                  </div>
                  <!-- NOTE ACCORDIONS -->
                  <div class="autosave-text">
                      <p contenteditable="true">{{ note.text }}</p>
                  </div>
              </div>
                <!-- END ACCORDIONS --> 
                <!-- DELETE BUTTONS -->
              <div class="col-md-2">
                  <div class="note-button">
                      <a href="#"><img src="../../delete-icon.gif" alt="" class="new-bookmark new-bookmark-icon"></a><p class="note-buttons">New Bookmark</p>
                  </div>
                  <hr>
                  <div class="note-button">
                      <a href="#"><img class="delete-icon" src="../../delete-icon.gif" alt=""></a><p class="note-buttons">Delete Note</p>
                  </div>
              </div>
                <!-- END BUTTONS -->
        </div>
        </section>
      </div>
    </div>
    <hr>
  <!-- ANGULAR AND BOOTSTRAP SETUP -->                   
    <hr class="button-divider">
    <div>
      <!-- NEW NOTE BUTTON -->
      <div class="row">
        <div class="text-center">
          <button class="submit-button" type="submit">NEW NOTE</button>
        </div>
        <!-- BUTTON END -->
      </div>    
      <div class="row">
      <!-- UNASSIGNED BOOKMARKS -->
        <p class="bottom-section">UNASSIGNED BOOKMARKS</p>
        <div class="col-sm-10 tags font-serif">
          <div class="unassigned-bookmarks">
            <a href="https://www.buzzfeed.com/" class="bookmark">Friday, 04 Mar 2016 3:27 PM</a>
          </div>                  

        </div> 
      <!-- END /UNASSIGNED BOOKMARKS -->
      </div>
          <!-- COMMENTS SECTION -->
      <p class="bottom-section">COMMENTS</p>
        <div class="row">
          <div class="comment-section">
            <div class="autosave-text">
                <p>{{ comment.posted_by }}</p>
                <p>Past comment. Can't edit.</p>
            </div>
            <div class="autosave-text">
                <p>{{ comment.posted_by }}</p>
                <p>Past comment. Can't edit.</p>
            </div>
            <div class="autosave-text">
                <p>{{ comment.posted_by }}</p>
                <p contenteditable="true">{{ comment.text }}</p>
            </div>
            <hr class="button-divider">                                   
            <div class="text-center">
              <button class="submit-button submit-comment" type="submit">NEW COMMENT</button>
            </div>
          </div>    
        </div>

      </div>
    </div>
  </div> 
</div>  